<Window x:Class="daily_planner_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:daily_planner_WPF"
        mc:Ignorable="d"
        Title="Planner" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <DataGrid x:Name="dgPlanner" FontSize="18" FontWeight="Bold" Margin="10" AutoGenerateColumns="False">
            <DataGrid.Columns >
                <DataGridTextColumn Binding="{Binding Path= CreationDate}" IsReadOnly="True" Header="CreateDate" Width="200"></DataGridTextColumn>
                <DataGridCheckBoxColumn Binding="{Binding Path= isDone,UpdateSourceTrigger=PropertyChanged}" IsReadOnly="False" Header="Done" Width="60"></DataGridCheckBoxColumn>
                <DataGridTextColumn Binding="{Binding Path= Text}" IsReadOnly="False" Header="Plan" Width="*"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
